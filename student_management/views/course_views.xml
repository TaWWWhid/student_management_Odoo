<odoo>
  <!-- Action -->
  <record id="action_sms_course" model="ir.actions.act_window">
    <field name="name">Courses</field>
    <field name="res_model">sms.course</field>
    <field name="view_mode">list,form</field>
  </record>

  <!-- List -->
  <record id="view_sms_course_list" model="ir.ui.view">
    <field name="name">sms.course.list</field>
    <field name="model">sms.course</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="code"/>
        <field name="credit"/>
        <field name="student_count" string="Students"/>
      </list>
    </field>
  </record>

  <!-- Form with smart button and inline students -->
  <record id="view_sms_course_form" model="ir.ui.view">
    <field name="name">sms.course.form</field>
    <field name="model">sms.course</field>
    <field name="arch" type="xml">
      <form>
        <header>
          <button name="action_view_students"
                  type="object"
                  string="View Students"
                  class="oe_stat_button"
                  icon="fa-users"/>
          <field name="student_count" widget="statinfo" string="Students"/>
        </header>
        <sheet>
          <group>
            <field name="name"/>
            <field name="code"/>
            <field name="credit"/>
          </group>
          <notebook>
            <page string="Enrolled Students">
              <field name="student_ids">
                <list editable="bottom">
                  <field name="name"/>
                  <field name="email"/>
                  <field name="roll_no"/>
                  <field name="department"/>
                </list>
              </field>
            </page>
          </notebook>
        </sheet>
        <chatter/>
      </form>
    </field>
  </record>
</odoo>
